<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- DEFAULT PAGE -->
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <!-- [HOME] Servlet instance -->
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>servlets.Home</servlet-class>
    </servlet>
    <!-- [HOME] Servlet mapping -->
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <!-- [ARTICLE] Servlet instance -->
    <servlet>
        <servlet-name>Article</servlet-name>
        <servlet-class>servlets.Article</servlet-class>
    </servlet>
    <!-- [ARTICLE] Servlet mapping -->
    <servlet-mapping>
        <servlet-name>Article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>
    
    <!-- [LOGIN] Servlet instance -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <!-- [LOGIN] Servlet mapping -->
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- [REGISTER] Servlet instance -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlets.Register</servlet-class>
    </servlet>
    <!-- [REGISTER] Servlet mapping -->
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <!-- [ADMIN] Servlet instance -->
    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>servlets.Admin</servlet-class>
    </servlet>
    <!-- [ADMIN] Servlet mapping -->
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    
    <!-- [ADMIN-USER] Servlet instance -->
    <servlet>
        <servlet-name>UserManager</servlet-name>
        <servlet-class>servlets.UserManager</servlet-class>
    </servlet>
    <!-- [ADMIN-USER] Servlet mapping -->
    <servlet-mapping>
        <servlet-name>UserManager</servlet-name>
        <url-pattern>/userManager</url-pattern>
    </servlet-mapping>
    
    <!-- [ADMIN-ARTICLE] Servlet instance -->
    <servlet>
        <servlet-name>ArticleManager</servlet-name>
        <servlet-class>servlets.ArticleManager</servlet-class>
    </servlet>
    <!-- [ADMIN-ARTICLE] Servlet mapping -->
    <servlet-mapping>
        <servlet-name>ArticleManager</servlet-name>
        <url-pattern>/articleManager</url-pattern>
    </servlet-mapping>
    
    <!-- [ADMIN-COMMENT] Servlet instance -->
    <servlet>
        <servlet-name>CommentManager</servlet-name>
        <servlet-class>servlets.CommentManager</servlet-class>
    </servlet>
    <!-- [ADMIN-COMMENT] Servlet mapping -->
    <servlet-mapping>
        <servlet-name>CommentManager</servlet-name>
        <url-pattern>/commentManager</url-pattern>
    </servlet-mapping>
</web-app>
